{
  "port": 11011,
  "basePath": "",
  "general": {
    "supportBanner": true,
    "dryRunMode": false,
    "searchReplacementDownloads": true,
    "searchDelay": 300,
    "httpMaxRetries": 3,
    "httpTimeout": 30,
    "certificateValidation": true
  },
  "downloadClients": [
    {
      "id": 1,
      "enabled": true,
      "name": "qBittorrent",
      "type": "qbittorrent",
      "host": "http://vpn:8080",
      "username": "${QBITTORRENT_USERNAME:-}",
      "password": "${QBITTORRENT_PASSWORD:-}",
      "useSsl": false,
      "testConnection": true
    }
  ],
  "applications": [
    {
      "id": 1,
      "enabled": true,
      "name": "Sonarr",
      "type": "sonarr",
      "baseUrl": "http://sonarr:8989",
      "apiKey": "624fe2507ddb4a8bbf1d8924b0e07b17",
      "useSsl": false,
      "testConnection": true
    },
    {
      "id": 2,
      "enabled": true,
      "name": "Radarr",
      "type": "radarr",
      "baseUrl": "http://radarr:7878",
      "apiKey": "21861064a2834ef08f7c2f26957af672",
      "useSsl": false,
      "testConnection": true
    }
  ],
  "malwareBlocker": {
    "enabled": true,
    "schedule": {
      "mode": "basic",
      "interval": 5
    },
    "blocklists": [
      {
        "enabled": true,
        "name": "Official Cleanuparr Blacklist",
        "pathOrUrl": "https://cleanuparr.pages.dev/static/blacklist",
        "type": "blacklist"
      }
    ],
    "deleteKnownMalware": true,
    "ignorePrivateTorrents": true,
    "deletePrivateTorrents": false
  },
  "queueCleaner": {
    "enabled": true,
    "schedule": {
      "mode": "basic",
      "interval": 5
    },
    "failedImport": {
      "enabled": true,
      "maxStrikes": 3,
      "ignorePrivateTorrents": true,
      "deletePrivateTorrents": false,
      "ignoredPatterns": []
    },
    "stalledDownload": {
      "enabled": true,
      "maxStrikes": 3,
      "resetStrikesOnProgress": true,
      "metadataDownloadStrikes": 5
    },
    "slowDownload": {
      "enabled": true,
      "maxStrikes": 5,
      "minimumSpeedThreshold": 102400,
      "maximumDownloadTime": 3600,
      "ignoreDownloadsAboveSize": 10737418240,
      "resetStrikesOnSpeedImprovement": true
    }
  },
  "downloadCleaner": {
    "enabled": true,
    "schedule": {
      "mode": "basic",
      "interval": 60
    },
    "seedingRules": {
      "categories": [
        {
          "name": "radarr",
          "maxRatio": 2.0,
          "minSeedTime": 48,
          "maxSeedTime": 720
        },
        {
          "name": "sonarr",
          "maxRatio": 2.0,
          "minSeedTime": 72,
          "maxSeedTime": 1080
        }
      ]
    },
    "unlinkedDownloads": {
      "enabled": true,
      "targetCategory": "cleanuparr-orphaned",
      "ignoredRootDirectories": [],
      "categoriesToCheck": ["radarr", "sonarr"]
    },
    "deletePrivateTorrents": false,
    "ignoredDownloads": []
  },
  "blacklistSync": {
    "enabled": false,
    "blacklistPath": "https://cleanuparr.pages.dev/static/blacklist"
  },
  "notifications": {
    "notifiarr": {
      "enabled": false,
      "apiKey": "${NOTIFIARR_API_KEY:-}",
      "events": {
        "failedImportStrike": false,
        "stalledStrike": false,
        "slowStrike": false,
        "queueItemDeleted": true,
        "downloadCleaned": true,
        "categoryChanged": false
      }
    },
    "apprise": {
      "enabled": false,
      "serverUrl": "${APPRISE_SERVER_URL:-}",
      "configKey": "${APPRISE_CONFIG_KEY:-}",
      "events": {
        "failedImportStrike": false,
        "stalledStrike": false,
        "slowStrike": false,
        "queueItemDeleted": true,
        "downloadCleaned": true,
        "categoryChanged": false
      }
    }
  },
  "logging": {
    "level": "info",
    "maxFileSize": 10485760,
    "maxFiles": 5,
    "archiveLogs": true,
    "archiveRetentionDays": 7
  }
}
